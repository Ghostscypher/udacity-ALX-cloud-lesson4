{
  "compilerOptions": {
    "lib": [
      "es2017",
      "DOM"
    ],
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "sourceMap": true,
    "target": "es2017",
    "module": "commonjs",
    "outDir": "lib",
    "allowSyntheticDefaultImports": true
  },
  "exclude": [
    "node_modules"
  ]
}
